{
    "name": "tiny-dsl",
    "displayName": "TinyDSL",
    "description": "Tiny Langium DSL by Senacor",
    "version": "0.0.1",
    "icon": "data/langium-logo.png",
    "publisher": "Senacor Technologies AG",
    "categories": ["Programming Languages"],
    "engines": {
        "vscode": "^1.67.0"
    },
    "repository": {
          "type": "git",
          "url": "https://github.com/senacor/langium-intermission-03-2023"
    },
    "contributes": {
        "languages": [{
            "id": "tiny-dsl",
            "aliases": ["Tiny DSL", "tiny-dsl"],
            "extensions": [".tinydsl"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "tiny-dsl",
            "scopeName": "source.tiny-dsl",
            "path": "./syntaxes/tiny-dsl.tmLanguage.json"
        }],
        "commands": [{
            "command": "tinydsl.generateSql",
            "title": "Generate TinyDSL SQL DDL"
        }],
        "menus": {
            "editor/title": [{
                "command": "tinydsl.generateSql"
            }]
        }
    },
    "activationEvents": [
        "onLanguage:tiny-dsl"
    ],
    "files": [
        "bin",
        "out",
        "src"
    ],
    "bin": {
        "tiny-dsl-cli": "./bin/cli"
    },
    "main": "./out/extension.js",
    "scripts": {
        "langium:generate": "langium generate",
        "langium:watch": "langium generate --watch",
        "build": "langium generate && tsc -b tsconfig.json",
        "build:bundle:extension": "esbuild ./src/extension.ts src/language-server/main.ts --bundle --outdir=out --external:vscode --format=cjs --platform=node --minify",
        "build:bundle:webworker": "esbuild ./src/language-server/main.ts --bundle --outdir=out --format=iife --minify",
        "watch": "tsc -b tsconfig.json --watch",
        "watch2": "npm run watch & npm run langium:watch",
        "lint": "eslint src --ext ts",
        "test": "vitest",
        "test-ui": "vitest --ui",
        "package": "npm run build:bundle:extension && vsce package"
    },
    "dependencies": {
        "chevrotain": "~10.4.2",
        "commander": "~10.0.0",
        "langium": "~1.1.0",
        "vscode-languageclient": "~8.0.2",
        "vscode-languageserver": "~8.0.2",
        "vscode-uri": "~3.0.7"
    },
    "devDependencies": {
        "@types/node": "~16.18.11",
        "@types/vscode": "~1.67.0",
        "@typescript-eslint/eslint-plugin": "~5.51.0",
        "@typescript-eslint/parser": "~5.51.0",
        "@vitest/ui": "~0.28.4",
        "@vscode/vsce": "~2.18.0",
        "eslint": "~8.33.0",
        "esbuild": "~0.17.11",
        "langium-cli": "~1.1.0",
        "typescript": "~4.9.5",
        "vitest": "^0.29.2"
    }
}
